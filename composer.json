{
  "name": "proscrumdev/battleship",
  "description": "simple console game",
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "require": {
    "php": ">7"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "behat/behat": "3.5.0"
  },
  "scripts": {
    "game": "App::run",
    "test": [
      "vendor/bin/phpunit --bootstrap vendor/autoload.php -c phpunit.xml",
      "vendor/bin/behat"
    ],
    "unittest" : "vendor/bin/phpunit --bootstrap vendor/autoload.php -c phpunit.xml"
  }
}
